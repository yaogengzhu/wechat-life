.header {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(to bottom, #37a6e0, #a0e8f0);
}

.header-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header-container image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: pink;
}

.header-container .username {
  margin-top: 20rpx;
}

.header-container .sign {
  font-size: 23rpx;
  color: #444;
  margin-top: 15rpx;
}

.header-container .info {
  width: 100%;
  display: flex;
  font-size: 25rpx;
  justify-content: space-between;
  margin-top: 60rpx;
}

.header-container .info view {
  display: flex;
  align-items: center;
}

.header-container .info view:first-child {
  margin-left: 100rpx;
}

.header-container .info view:last-child {
  margin-right: 100rpx;
}

.header-container .info view image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 设置 */

.groun-list {
  width: 100%;
  margin-top: 30rpx;
  overflow: hidden;
}

.groun-list navigator {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.groun-list navigator view {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.groun-list navigator view image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.groun-list navigator image {
  font-size: 28rpx;
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}
