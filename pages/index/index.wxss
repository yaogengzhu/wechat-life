/* 轮播图部分 */

.banner {
  position: relative;
}

swiper {
  width: 100%;
  height: 450rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
}

swiper-item>image {
  width: 100%;
  height: 100%;
}

/* 搜索框部分 */

.search {
  position: absolute;
  width: 100%;
  top: 10rpx;
  left: 0;
  display: flex;
  justify-items: center;
  padding: 0 50rpx 0 50rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
}

.search input {
  border: 1px solid #ccc;
  width: 70%;
  height: 60rpx;
  font-size: 20rpx;
  color: #444;
  border-radius: 30rpx;
  padding: 0 10rpx 0rpx 10rpx;
  background-color: #fff;
}

.search text {
  font-size: 35rpx;
  margin-left: 20rpx;
}


/* 导航部分 */
.nav {
  width: 100%;
  overflow: hidden;
}

.nav-list {
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 200rpx;
}

.nav-list image {
  width: 81rpx;
  height: 81rpx;
}

.nav-list text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #444;
}

/* 热们推荐 */
.hot-product {
  width: 100%;
}

.hot-product .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  padding: 0 30rpx;
}

.hot-product .tuijian {
  font-size: 30rpx;
  font-weight: 500;
  line-height: 40rpx;
}

.hot-product .tuijian image {
  width: 40rpx;
  height: 40rpx;
}


.hot-product .tuijian {
  display: flex;
  align-self: center;
}

.hot-product .more image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 5rpx;
}

/* 推荐内容部分 */
.contain {
  width: 90%;
  margin-top: 20rpx;
  padding: 0 5%;
}

.contain-list {
  float: left;
  overflow: hidden;
  width: 50%;
  margin: 25rpx 0;
}

.contain .img {
  height: 300rpx;
  padding: 0 15rpx;
}

.contain-list image {
  width: 100%;
  height: 100%;
}

.contain-list .them-title {
  padding: 0 15rpx;
  font-size: 28rpx;
}

.contain .info {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 15rpx;
  color: #cccc;
}

.contain .info .name {
  font-size: 22rpx;
}

.contain .info .hot {
  font-size: 20rpx;
}
.contain .info .hot image{
  width: 25rpx;
  height: 25rpx;
}